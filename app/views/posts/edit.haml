%form{action: "/posts/2", method: "put"}
  .form-group
    %label{for: "posttitle"} Title
    %input#posttitle.form-control{type: "text", name: "title", value: @post.title}

  .form-group
    %label{for: "postbody"} Post body
    %textarea#postbody.form-control{rows: "3", name: "content", value: @post.content}

  %button.btn.btn-success{type: "submit"} Update
  %button.btn.btn-danger{type: "button"} Cancel
